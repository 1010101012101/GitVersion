      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="app.config" />
    <None Include="key.snk" />
  </ItemGroup>

  <ItemGroup>
     <None Include="NugetAssets\build\**">
      <Pack>true</Pack>
      <PackagePath>build\%(RecursiveDir)%(FileName)%(Extension)</PackagePath>
    </None>
    
     <None Include="NugetAssets\build\GitVersionTask.targets">
      <Pack>true</Pack>
      <PackagePath>buildMultiTargeting\GitVersionTask.targets</PackagePath>
    </None>    
   
  </ItemGroup>
 
